<h1>Edit Clothing Item</h1>

<%= form_with model: @clothing, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label :article %>
    <%= form.text_field :article, class: "form-control" %>
  </div>

  <%= form.submit "Update Item" %>
<% end %>
