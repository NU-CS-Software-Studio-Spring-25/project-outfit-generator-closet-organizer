<div class="container mt-5">
  <div class="card shadow-lg" style="max-width: 600px; margin: 0 auto;">
    <% if @clothing.image.attached? %>
      <%= image_tag @clothing.image, class: "card-img-top", style: "object-fit: cover; height: 300px;", alt: "Image of #{@clothing.name} - #{@clothing.brand} #{@clothing.category}" %>
    <% else %>
      <div class="card-img-top d-flex justify-content-center align-items-center bg-light" style="height: 300px;">
        <p class="text-muted">No image uploaded.</p>
      </div>
    <% end %>

    <div class="card-body text-center">
      <h2 class="card-title mb-3"><%= @clothing.name %></h2>
      <p class="card-text mb-2"><strong>Brand:</strong> <%= @clothing.brand %></p>
      <p class="card-text mb-1"><strong>Category:</strong> <%= @clothing.category %></p>
      <p class="card-text mb"><strong>Article:</strong> <%= @clothing.article %></p>
    </div>

    <div class="card-footer text-center">
      <%= link_to "â† Back", request.referer || clothings_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>



