<!-- app/views/clothings/show.html.erb -->

<h1><%= @clothing.name %></h1>

<p>
  <strong>Brand:</strong>
  <%= @clothing.brand %>
</p>

<p>
  <strong>Category:</strong>
  <%= @clothing.category %>
</p>

<hr>

<%= link_to 'Edit', edit_clothing_path(@clothing), class: "btn btn-warning" %>
<%= link_to 'Back', clothings_path,       class: "btn btn-secondary" %>
<%= button_to "Delete",
            clothing_path(@clothing),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this item?" },
            class: "btn btn-danger" %>
