<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4 border-danger">
        <h2 class="text-center text-danger mb-4">
          Are you sure you want to delete "<%= @clothing.name %>"?
        </h2>

        <% if @clothing.image.attached? %>
          <div class="text-center mb-3">
            <%= image_tag @clothing.image, class: "img-fluid rounded", style: "max-height: 300px;" %>
          </div>
        <% else %>
          <div class="alert alert-warning text-center">
            No image is associated with this item.
          </div>
        <% end %>

        <ul class="list-group mb-4">
          <li class="list-group-item"><strong>Brand:</strong> <%= @clothing.brand %></li>
          <li class="list-group-item"><strong>Category:</strong> <%= @clothing.category %></li>
          <li class="list-group-item"><strong>Article:</strong> <%= @clothing.article %></li>
        </ul>

        <%= form_with url: clothing_path(@clothing), method: :delete, local: true do %>
          <div class="d-flex justify-content-between">
            <%= submit_tag "🗑️ Yes, delete", class: "btn btn-danger" %>
            <%= link_to "Cancel", request.referer || clothings_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
