<h1><%= @clothing.new_record? ? "New Clothing Item" : "Edit Clothing Item" %></h1>

<%= form_with(model: @clothing, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", clothings_path, class: "btn btn-secondary mt-2" %>
