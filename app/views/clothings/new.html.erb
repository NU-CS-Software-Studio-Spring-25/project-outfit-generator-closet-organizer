<h1><%= @clothing.new_record? ? "New Clothing Item" : "Edit Clothing Item" %></h1>

<%= form_with(model: @clothing, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control", required: true %>
  </div>

  <!-- assign article type: top or bottom -->
  <div class="mb-3">
    <%= form.label :article, "Choose article type:", class: "form-label d-block", required: true   %>

    <div class="btn-group" role="group" aria-label="Article">
      <input type="radio" class="btn-check" name="clothing[article]" id="article-top" value="top" <%= 'checked' if @clothing.article == "top" %>>
      <label class="btn btn-outline-primary" for="article-top">Top</label>

      <input type="radio" class="btn-check" name="clothing[article]" id="article-bottom" value="bottom" <%= 'checked' if @clothing.article == "bottom" %>>
      <label class="btn btn-outline-primary" for="article-bottom">Bottom</label>
    </div>
  </div>

  <!-- required image -->
  <div>
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control", accept: ".png,.jpg,.jpeg,.heic", required: false %>
  </div>

  <div class = "mt-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "← Back", request.referer || clothings_path, class: "btn btn-secondary mt-3" %>
