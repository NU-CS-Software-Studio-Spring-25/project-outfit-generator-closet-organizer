<h1><%= @clothing.new_record? ? "New Clothing Item" : "Edit Clothing Item" %></h1>

<%= form_with(model: @clothing, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class = "mt-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "← Back", request.referer || clothings_path, class: "btn btn-secondary mt-3" %>
