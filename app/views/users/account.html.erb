<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center">Account Information</h2>

        <p><strong>Email:</strong> <%= @user.email %></p>

        <p>
          <strong>Password:</strong> 
          <span class="text-muted">••••••••</span>
          <%= link_to "(change)", edit_user_registration_path(anchor: "password"), class: "ms-2" %>
        </p>

        <div class="d-flex justify-content-between mt-4">
          <%= link_to '✏️ Edit Account', edit_user_registration_path, class: "btn btn-outline-primary" %>
          <%= button_to "🗑️ Delete My Account", registration_path(@user),
                        method: :delete,
                        data: { confirm: "Are you sure you want to permanently delete your account?" },
                        class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

