<!-- app/views/outfits/new.html.erb -->
<h1>Create a New Outfit</h1>

<%= form_with(model: @outfit, local: true) do |form| %>
  <% if @outfit.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @outfit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Outfit Name" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Outfit Description" %>
    <%= form.text_field :description, class: "form-control", required: false %>
    </div>

  <div class="form-group mt-3">
    <%= form.submit "Create Outfit", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Back', outfits_path, class: "btn btn-secondary mt-3" %>
