<div class="container py-5">
  <h1 class="mb-4 text-center">Frequently Asked Questions</h1>

  <div class="accordion" id="faqAccordion">
    <% faqs = [
      { question: "How do I upload clothing?", answer: "After logging in, go to the Catalog and click 'Add New Clothing Item'." },
      { question: "Can I delete someone else's clothing?", answer: "No. You can only delete items you uploaded unless you're an admin." },
      { question: "What is the Thrift page?", answer: "It's where users can share clothing with others and set a price." }
    ] %>

    <% faqs.each_with_index do |faq, i| %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading-<%= i %>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= i %>" aria-expanded="false" aria-controls="collapse-<%= i %>">
            <%= faq[:question] %>
          </button>
        </h2>
        <div id="collapse-<%= i %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= i %>">
          <div class="accordion-body">
            <%= faq[:answer] %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>